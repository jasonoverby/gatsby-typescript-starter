{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "incremental": true,
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true
  },
  "exclude": ["node_modules", "public", ".cache"]
}
